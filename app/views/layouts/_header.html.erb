<div class="navbar">
  <%= link_to "My Finances", root_path, class: 'navbar__item' %>

  <%= link_to accounts_path, class: "navbar__item" do %>
    <i class="fa fa-money"></i>
    Accounts
  <% end %>

  <%= link_to current_month_path, class: "navbar__item" do %>
    <i class="fa fa-calendar"></i>
    <%= "#{Time.now.strftime("%B")}" %>
  <% end %>

  <%= link_to current_year_path, class: "navbar__item" do %>
    <i class="fa fa-calendar"></i>
    <%= "#{Time.now.strftime("%Y")}" %>
