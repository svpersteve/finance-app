  <%= link_to current_month_graph_path, class: "navbar__item" do %>
    <i class="fa fa-line-chart"></i>
    <%= "#{Time.now.strftime("%B")}" %>
  <% end %>

  <%= link_to current_year_graph_path, class: "navbar__item" do %>
    <i class="fa fa-line-chart"></i>
