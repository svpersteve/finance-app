<table>
  <tr>
    <th><h1>Account</h1></th>
    <th><h1>Amount</h1></th>
  </tr>

  <%- @balances.each do |balance| %>
    <%- balance.each do |name, value| %>
      <tr>
        <td><%= name %></td>
        <td><%= number_to_currency value, unit: @unit %></td>
      </tr>
    <% end %>
  <% end %>

  <tr>
    <td>Cash Total</td>
    <td><%= number_to_currency @total_cash, unit: @unit %></td>
  </tr>

</table>
