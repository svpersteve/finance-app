  </tr>

  <tr>
    <td>Mortgage</td>
    <td><%= number_to_currency @mortgage, unit: @unit %></td>
  </tr>

  <tr>
    <td>FirstBuy</td>
    <td><%= number_to_currency @firstbuy, unit: @unit %></td>
  </tr>

  <tr>
    <td>Assets/Liabilities Total</td>
    <td><%= number_to_currency @assets, unit: @unit %></td>
  </tr>

</table>
<table>
  <tr>
    <th><h1></h1></th>
